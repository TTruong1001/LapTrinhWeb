
@{
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Shipper/Save" method="post">
            <input type="hidden" name="shipperId" value="@Model.ShipperID">
            <div class="form-group">
                <label class="control-label col-sm-2" for="shipperName">Tên người giao hàng:</label>
                <div class="col-sm-10">
                    <input type="text" name="shipperName" class="form-control" id="shipperName" placeholder="Nhập tên người giao hàng" autofocus value="@Model.ShipperName">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="phone">
                    Số điện thoại:
                </label>
                <div class="col-sm-10">
                    <input type="text" name="phone" class="form-control" id="phone" placeholder="Nhập số điện thoại" value="@Model.Phone">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>

                    <a href="~/shipper" class="btn btn-warning">
                        <i class="glyphicon glyphicon-log-out"></i>
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


